        <activity
            android:name=".DocPlayerActivity"
            android:configChanges="uiMode"
            android:exported="true"
            android:label="RC Player"
            android:icon="@drawable/viewer"
            android:roundIcon="@drawable/viewer"
            android:theme="@android:style/Theme.Material.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <data android:mimeType="application/remote-compose-doc" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ExperimentRecyclerActivity"
            android:configChanges="uiMode"
